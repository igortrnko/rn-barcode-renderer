{
  "name": "rn-barcode-renderer",
  "private": false,
  "description": "Barcode and Qr Code renderer for React Native based on @shopify/react-native-skia",
  "version": "2.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "expo",
    "barcode",
    "qrcode"
  ],
  "author": "Igor Trnko",
  "license": "MIT",
  "licenseFilename": "LICENSE.md",
  "repository": {
    "url": "https://github.com/igortrnko/rn-barcode-renderer",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/igortrnko/rn-barcode-renderer/issues"
  },
  "homepage": "https://github.com/igortrnko/rn-barcode-renderer#readme",
  "peerDependencies": {
    "@shopify/react-native-skia": ">=2.0.0",
    "react-native-reanimated": ">=3.19.1",
    "react": ">=19",
    "react-native": ">=0.79"
  },
  "peerDependenciesMeta": {
    "react-native-reanimated": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "jsbarcode": "^3.12.1",
    "qrcode": "^1.5.4"
  },
  "exports": {
    ".": [
      {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    ]
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
